{
  "name": "cross-layer-qa-automation",
  "version": "1.0.0",
  "description": "A complete end-to-end test automation framework covering UI and API testing using NightwatchJS, Supertest, and CircleCI. Includes test cases, bug reports, CI/CD pipeline, and HTML test reports.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:amazonaws": "npx nightwatch --config ui-tests/amazonaws/nightwatch.conf.js",
    "test:linkedinRegisterationPage": "npx nightwatch --config ui-tests/linkedinRegisterationPage/nightwatch.conf.js",
    "test:api-tests": "npx jest",
    "dev": "nodemon ./node_modules/mock-user-auth/bin/www.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ranaamr22/cross-layer-qa-automation.git"
