  "dependencies": {
    "chromedriver": "^138.0.5",
    "mock-user-auth": "^1.0.15",
    "nightwatch": "^3.12.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "express": "^5.1.0",
    "jest": "^30.0.5",
